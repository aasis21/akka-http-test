    <!--</logger>-->

    <!--<logger name="akka.actor" level="debug" additivity="false">-->
        <!--<appender-ref ref="console"/>-->
    <!--</logger>-->

    <!--<logger name="akka.http" level="debug" additivity="false">-->
        <!--<appender-ref ref="console"/>-->
    <!--</logger>-->

    <!--<logger name="akka.stream" level="debug" additivity="false">-->
        <!--<appender-ref ref="console"/>-->
    <!--</logger>-->

    <root level="WARN">
        <appender-ref ref="console"/>
    </root>

</configuration>
